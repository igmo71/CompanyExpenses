@page "/companystructures"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using CompanyExpenses.Domain
@using CompanyExpenses.Data
@implements IAsyncDisposable
@inject IDbContextFactory<CompanyExpenses.Data.ApplicationDbContext> DbFactory
@attribute [Authorize]

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<p>
    <a href="companystructures/create">Create New</a>
</p>

<QuickGrid Class="table" Items="context.CompanyStructure">
    <PropertyColumn Property="companystructure => companystructure.ParentId" />
    <PropertyColumn Property="companystructure => companystructure.Name" />

    <TemplateColumn Context="companystructure">
        <a href="@($"companystructures/edit?id={companystructure.Id}")">Edit</a> |
        <a href="@($"companystructures/details?id={companystructure.Id}")">Details</a> |
        <a href="@($"companystructures/delete?id={companystructure.Id}")">Delete</a>
    </TemplateColumn>
</QuickGrid>

@code {
    private ApplicationDbContext context = default!;

    protected override void OnInitialized()
    {
        context = DbFactory.CreateDbContext();
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
