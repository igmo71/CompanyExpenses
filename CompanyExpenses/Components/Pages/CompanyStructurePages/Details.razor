@page "/companystructures/details"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using CompanyExpenses.Domain
@inject IDbContextFactory<CompanyExpenses.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager
@attribute [Authorize]

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>CompanyStructure</h2>
    <hr />
    @if (companystructure is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">ParentId</dt>
            <dd class="col-sm-10">@companystructure.ParentId</dd>
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@companystructure.Name</dd>
        </dl>
        <div>
            <a href="@($"/companystructures/edit?id={companystructure.Id}")">Edit</a> |
            <a href="@($"/companystructures")">Back to List</a>
        </div>
    }
</div>

@code {
    private CompanyStructure? companystructure;

    [SupplyParameterFromQuery]
    private string Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        companystructure = await context.CompanyStructure.FirstOrDefaultAsync(m => m.Id == Id);

        if (companystructure is null)
        {
            NavigationManager.NotFound();
        }
    }
}
