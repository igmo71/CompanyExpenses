@page "/expenseitems/edit"
@using CompanyExpenses.Data
@using Microsoft.EntityFrameworkCore
@using CompanyExpenses.Domain
@implements IAsyncDisposable
@inject IDbContextFactory<CompanyExpenses.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Изменить</PageTitle>

<h1>Изменить</h1>

<h2>Статью Затрат</h2>
<hr />
@if (ExpenseItem is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="ExpenseItem" OnValidSubmit="UpdateExpenseItem" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary role="alert"/>
                <input type="hidden" name="ExpenseItem.Id" value="@ExpenseItem.Id" />
                <div class="mb-3">
                    <label for="parentid" class="form-label">@(parent is null ? string.Empty : "Родительская статья:")</label>
                    <input id="parentid" value="@(parent is null ? "Это верхний уровень" : parent?.Name)" class="form-control" disabled />
                </div>
                <div class="mb-3">
                    <label for="name" class="form-label">Эта статья:</label>
                    <InputText id="name" @bind-Value="ExpenseItem.Name" class="form-control" />
                    <ValidationMessage For="() => ExpenseItem.Name" class="text-danger" />
                </div>
                <button type="submit" class="btn btn-primary">Сохранить</button> |
                <a href="/expenseitems">Назад</a>
            </EditForm>
        </div>
    </div>
}

@code {
    [SupplyParameterFromQuery]
    private string? Id { get; set; }

    [SupplyParameterFromForm]
    private ExpenseItem? ExpenseItem { get; set; }

    private ApplicationDbContext context = default!;
    private ExpenseItem? parent;


    protected override async Task OnInitializedAsync()
    {
        context = DbFactory.CreateDbContext();

        ExpenseItem ??= await context.ExpenseItems.FirstOrDefaultAsync(m => m.Id == Id);

        if (ExpenseItem is null)
        {
            NavigationManager.NotFound();
        }

        parent = context.ExpenseItems.FirstOrDefault(e => e.Id == ExpenseItem!.ParentId);
    }

    // To protect from overposting attacks, enable the specific properties you want to bind to.
    // For more information, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task UpdateExpenseItem()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(ExpenseItem!).State = EntityState.Modified;

        try
        {
            await context.SaveChangesAsync();
        }
        catch (DbUpdateConcurrencyException)
        {
            if (!ExpenseItemExists(ExpenseItem!.Id))
            {
                NavigationManager.NotFound();
            }
            else
            {
                throw;
            }
        }

        NavigationManager.NavigateTo("/expenseitemstree");
    }

    private bool ExpenseItemExists(string id)
    {
        using var context = DbFactory.CreateDbContext();
        return context.ExpenseItems.Any(e => e.Id == id);
    }

    public async ValueTask DisposeAsync() => await context.DisposeAsync();
}
